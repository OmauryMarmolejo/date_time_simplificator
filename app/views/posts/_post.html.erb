<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.created_at.to_formatted_s(:short) %>
  </p>

  <p>
    <strong>Updated at:</strong>
    <%= post.updated_at.to_formatted_s(:long) %>
  </p>

</div>
